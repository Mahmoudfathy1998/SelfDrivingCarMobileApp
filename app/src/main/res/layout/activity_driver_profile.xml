<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layoutHead"
            android:background="#5CC09F"
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/image_view"
                android:background="@drawable/iconsuser"
                android:layout_centerInParent="true"
                android:layout_width="90dp"
                android:layout_height="90dp"/>


            <ProgressBar
                android:visibility="invisible"
                android:id="@+id/progressbar_pic"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="match_parent"
                android:layout_below="@id/layoutHead"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/Firstname"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="260dp"
                    android:enabled="true"
                    android:hint="Firstanme:"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorPrimary" />

                <EditText
                    android:id="@+id/userFirstname"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Firstname"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:enabled="true"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/Lastname"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:enabled="true"
                    android:hint="Lastname:"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorPrimary" />

                <EditText
                    android:id="@+id/userLasttname"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Lastname"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:enabled="true"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/Email"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:enabled="true"
                    android:hint="Email:"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorPrimary" />

                <EditText
                    android:id="@+id/userEmail"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Email"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:enabled="true"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/Password"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:enabled="true"
                    android:hint="Password:"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorPrimary" />

                <EditText
                    android:id="@+id/userPassword"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Password"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:enabled="true"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@android:color/black" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/SerialNum"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:enabled="true"
                    android:hint="SerialNum:"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorPrimary" />

                <EditText
                    android:id="@+id/carSerialNum"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/SerialNum"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:enabled="true"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/Model"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:enabled="true"
                    android:hint="ModelName:"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorPrimary" />

                <EditText
                    android:id="@+id/Modelname"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Model"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:enabled="true"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@android:color/black" />

                <Button
                    android:id="@+id/button_save"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:background="?colorPrimary"
                    android:text="Save Changes"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black" />

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>